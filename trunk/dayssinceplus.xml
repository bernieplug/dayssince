<script type="text/javascript">
	var msg = new _IG_MiniMessage(__MODULE_ID__);
	
	var reminders__MODULE_ID__; // This is a json object of reminders 
								// (array of hashes with 'description', 'lastreset', 'counter' & 'sum')
	var stat__MODULE_ID__;		// this is a json object of statistic feature, include 'mean'	
	var prefs__MODULE_ID__;	
	var ascent__MODULE_ID__ = false;
	
	_IG_RegisterOnloadHandler(onLoad__MODULE_ID__);
	
	function onLoad__MODULE_ID__() {
		prefs__MODULE_ID__ = new _IG_Prefs(__MODULE_ID__);
		msg.createDismissibleMessage("Days Since Plus has been updated recently...Don't worry, no data lost.");
		msg.createDismissibleMessage("I will take care of the ugly sorting arrows soon. :P");
		loadReminders__MODULE_ID__();			
	}
		
	function loadReminders__MODULE_ID__() {
		var reminders = prefs__MODULE_ID__.getString("reminders");
		
		reminders__MODULE_ID__ = [];
		
		if (reminders != "") {
			reminders__MODULE_ID__ = reminders.parseJSON(function (key, value) {
			        return key == 'lastreset' ? new Date(parseInt(value)) : value;
			    });
		}
		sortReminder__MODULE_ID__(1); // auto sort reminders by dayssince
		createTable__MODULE_ID__();
	}

	function saveReminders__MODULE_ID__(){
		prefs__MODULE_ID__.set("reminders", reminders__MODULE_ID__.toJSONString());
		loadReminders__MODULE_ID__();
	}

	function addReminder__MODULE_ID__(description, daysago_string) {
		var description = _trim(description);
		
		var daysago = parseInt(daysago_string);
		if (isNaN(daysago))
		{
			daysago = 0;
		}
		var now = new Date();
		var lastreset = getDateAgo(now, daysago);
		var counter = 1;
		var sum = 0;		
		
		_gel("newReminderInput__MODULE_ID__").value = "";
		if (description == "")
			return false;
			
		reminders__MODULE_ID__[reminders__MODULE_ID__.length] =
			{"description": description, "lastreset": lastreset, "counter": counter, "sum": sum};
		
		
		sortReminder__MODULE_ID__(1); // auto sort reminders by dayssince
		
		saveReminders__MODULE_ID__();
		// createTable__MODULE_ID__();
		
		document.newReminderForm__MODULE_ID__.newDaysSinceInput__MODULE_ID__.value = "0";
		return true;
	}

	function deleteReminder__MODULE_ID__(number) 
	{
		var beginning = reminders__MODULE_ID__.slice(0, number);
		var end = reminders__MODULE_ID__.slice(number + 1,
		                                      reminders__MODULE_ID__.length);
		
		reminders__MODULE_ID__ = beginning.concat(end);
		sortReminder__MODULE_ID__(1); // auto sort reminders by dayssince
		saveReminders__MODULE_ID__();
		// createTable__MODULE_ID__();
	}
	
	function resetReminder__MODULE_ID__(number) 
	{		
		var now = new Date();
		var lastreset = reminders__MODULE_ID__[number].lastreset;
		var dayssince = calendarDaysSince(lastreset);
		// msg.createDismissibleMessage("dayssince = ");
		// msg.createDismissibleMessage(dayssince);
		
		var row = getRow__MODULE_ID__(number);
		var col = getCol__MODULE_ID__(row, 0);
		
		col.innerHTML = "0";
		reminders__MODULE_ID__[number].lastreset = now;
		reminders__MODULE_ID__[number].counter ++;
		reminders__MODULE_ID__[number].sum += dayssince;
		sortReminder__MODULE_ID__(1); // auto sort reminders by dayssince
		saveReminders__MODULE_ID__();
		// createTable__MODULE_ID__();
	}

	function rowClass__MODULE_ID__(number) {
		if (number % 2 != 0)
			return " class=odd__MODULE_ID__ ";
		else
			return " class=even__MODULE_ID__ ";
	}	
	
	function getRow__MODULE_ID__(number) {
		return _gel("row" + number + "__MODULE_ID__");
	}

	function getCol__MODULE_ID__(row, index) {
		return row.childNodes.item(index);
	}

	//== create table == 
	function createTable__MODULE_ID__() 
	{
		var html = createSortRow__MODULE_ID__();
		
		html = html + "<table cellspacing=2px id=remindersTable__MODULE_ID__>";
		
		for (i = 0; i < reminders__MODULE_ID__.length; i++) {
			if (reminders__MODULE_ID__[i] == null)
				break;
			
			var description = reminders__MODULE_ID__[i].description;
			var lastreset = reminders__MODULE_ID__[i].lastreset;
			var frequency = displayFrequency(reminders__MODULE_ID__[i]);		
			
			html = html + createRow__MODULE_ID__(i, description, lastreset, frequency);
		}
		
		html = html + "</table>";
		
		_gel("remindersDiv__MODULE_ID__").innerHTML = html;
		_IG_AdjustIFrameHeight();
	}
		
	function createSortRow__MODULE_ID__()
	{
		var img = _IG_GetImageUrl('http://dayssinceplus.googlecode.com/svn/trunk/sort.gif');
		var html = "<p><a href=\"javascript:onSortReminder__MODULE_ID__(1)\"" +			
				"<img" + " src=\"" + img + "\">" + 
				"</a>    <a href=\"javascript:onSortReminder__MODULE_ID__(2)\"" +
				"<img" + " src=\"" + img + "\">" + 
				"</a></p>";
		return html;
	}
	
	function createRow__MODULE_ID__(number, description, lastreset, frequency) 
	{
		var now = new Date();
		var dayssince = calendarDaysSince(lastreset);
		
		var html =
			"<tr id=\"row" + number + "__MODULE_ID__\"" +
			rowClass__MODULE_ID__(number) + ">" +
			"<td class=dayssince_ds__MODULE_ID__><div class=dayssince_ds__MODULE_ID__>" + 
			dayssince +
			"</div></td>" +
			"<td class=description_td__MODULE_ID__><span class=description_ds__MODULE_ID__>" +
			_hesc(description) +
			"</span></td>" +
			"<td class=frequency_td__MODULE_ID__><span class=frequency_ds__MODULE_ID__>" +
			frequency +
			"</span></td>" +
			"<td>" +
			createReset__MODULE_ID__(number) +
			createDelete__MODULE_ID__(number) +
			"</td>" +
			"</tr>";		
		return html;
	}

	function createDelete__MODULE_ID__(number) 
	{
		var img = _IG_GetImageUrl('http://dayssinceplus.googlecode.com/svn/trunk/x.gif');
		var html =
			"<a href=\"javascript:deleteReminder__MODULE_ID__(" + number + ")\">" +
			"<img class=delete__MODULE_ID__" +
			" src=\"" + img + "\">" +
			"</a>";
		return html;
	}

	function createReset__MODULE_ID__(number) 
	{
		var img = _IG_GetImageUrl('http://dayssinceplus.googlecode.com/svn/trunk/reset.gif');
		var html =
			"<a href=\"javascript:resetReminder__MODULE_ID__(" + number + ")\">" +
			"<img class=reset__MODULE_ID__" +
			" src=\"" + img + "\">" +
			"</a>";
		return html;
	}
	//==========
	
	//== sort == 
	// onclick sort icons
	function onSortReminder__MODULE_ID__(type)
	{
		sortReminder__MODULE_ID__(type);
		ascent__MODULE_ID__ = !ascent__MODULE_ID__;		
		createTable__MODULE_ID__();
	}
	
	// sort reminder array
	// by dayssince or by frequency
	function sortReminder__MODULE_ID__(type)
	{
		var i;
		var length = reminders__MODULE_ID__.length;
		if (length > 0)
		{		
			// generate reference array
			if (type == 1)
			// sort by dayssince
			{
				
				var refarray = new Array();
				for (i = 0; i < length; i ++)
				{
					var lastreset = reminders__MODULE_ID__[i].lastreset;
					refarray[i] = calendarDaysSince(lastreset);
				}			
			}
			else if (type == 2)
			// sort by frequency
			{
				var refarray = new Array();
				for (i = 0; i < length; i ++)
				{
					refarray[i] = calculateFrequency(reminders__MODULE_ID__[i]);
				}			
			}
			else
				return;
			
			bubbleSort(refarray, reminders__MODULE_ID__, ascent__MODULE_ID__);							
		}	
	}

	//sort target array by  bubble sort algorithm in terms of the reference array
	// refArray, reference array
	// targetArray, target array
	function bubbleSort(refarray, targetarray, ascent)
	{		
		var i, j, holder;
		var exchange;	// swap flag
		var length = refarray.length;
		for (i = 0; i < length; i ++)
		{
			exchange = false;	
			for (j = length - 1; j >= i; j --)
			{
				if ((ascent && refarray[j + 1] < refarray[j]) || (!ascent && refarray[j + 1] > refarray[j]))
				// swap both refArray elements and targetArray elements
				{
					holder = refarray[j + 1];
					refarray[j + 1] = refarray[j];
					refarray[j] = holder;
					holder = targetarray[j + 1];
					targetarray[j + 1] = targetarray[j];
					targetarray[j] = holder;
					exchange = true;
				}			
			}
			if (!exchange)
				return;
		}
	} 
	//==========
	
	//== stat ==
	// return frequency in floot
	function calculateFrequency(reminder)
	{
		var sum = parseInt(reminder.sum);
		var counter = parseInt(reminder.counter);	
		var frequency = sum / counter;			
		return frequency;
	}

	// display frequency in integer days, if frequency < 1 day, display string "<1"	
	// display frequency only counter > 1, i.e., after reset at least once. 
	function displayFrequency(reminder)
	{
		var frequency = calculateFrequency(reminder);
		var counter = parseInt(reminder.counter);
		if (counter == 1)
			frequency = "";
		else
		{					
			frequency = Math.floor(frequency);
			if (frequency == 0)
				frequency = "<1";			
		}
		return frequency;
	}
	//==========
	
	//== date math ==
	var minutes = 1000*60;
	var hours = minutes*60;
	var days = hours*24;
	var years = days*365;
		
	// returns integer with calendar days since the startDate, midnight to midnight
	// startDate is a Date object. Assumes startDate is in the past.
	function calendarDaysSince(startdate) 
	{
		var nowdate = new Date();
		
		// Roll clocks back to midnight
		var start = new Date(startdate.getYear(), startdate.getMonth(), startdate.getDate());
		var now = new Date(nowdate.getYear(), nowdate.getMonth(), nowdate.getDate());
		
		return Math.ceil((now.getTime()-start.getTime())/days);
	}

	// returns Date object, which is daysAfter after startDate (Date object)
	function getDateAfter(startdate, daysafter)
	{
		var enddate = new Date();
		enddate.setTime(startdate.getTime() + days * daysafter);
		return enddate;
	}

	// returns Date object, which is daysBefore before endDate (Date object)
	function getDateAgo(enddate, daysago)
	{
		var startdate = new Date();
		startdate.setTime(enddate.getTime() - days * daysago);
		return startdate;
	}		
	//==========
	_IG_Analytics("UA-450084-2", "/dayssinceplus");
	
</script>

